<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.user_id %></td>
        <td><%= group.desc %></td>
        <td><%= link_to 'Show', user_group_path(current_user, group) %></td>
        <td><%= link_to 'Edit', edit_user_group_path(current_user, group) %></td>
        <td><%= link_to 'Destroy', user_group_path(current_user,group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_user_group_path(current_user) %>
