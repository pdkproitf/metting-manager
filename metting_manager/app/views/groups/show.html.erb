<div>
	thong tin group
	<br>
	name: 
	<%= @group[0].name %>
	<br>
	desc: 
	<%=@group[0].desc %>
	<br>
	<% @memlist = Memberlist.where(group_id: @group[0].id)%>
		<% if @memlist.size >0 %>
		<%= @memlist.size%> thanh vien
		<br>
		<% @memlist.each do |f| %>
		<% @user=User.find_by_id(f.user_id)%>
		<br>
		<%= link_to "#{@user.email}",group_path%>
		<%end%>
		<%else%>
		group chua co thanh vien nao
		<%end%>
        <br>
		<br>
		<td><%= link_to 'edit', edit_group_path() if current_user!=nil %></td>
		
</div>
