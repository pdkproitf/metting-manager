<body class="mybody">
<nav class="navbar navbar-inverse navbar-fixed-top" style=" height: 60px;border: 5px solid lightblue;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    border-radius: 10px;">
      <div class="container" style="height:100%">
        <div class="navbar-header" style="width: 300px">
          <%= link_to "HOME", root_path, class: "navbar-brand", :style => "color: white;height:100%" %>
        </div>
        <div class="nav navbar-nav navbar-center" style="align:center; height: 100%">
                    <%= form_for(@a="", :html => {:class => "form-horizontal center", :multipart => true}, url: root_path, method: :get) do |f| %>
                <div class="col-sm-6" style="height:50px; width:500px">
                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker10' style="color: red;">
                            <%= f.text_field :get_time,:class => "form-control" %>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar">
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker10').datetimepicker({
                            viewMode: 'years',
                            format: 'YYYY/MM'
                        });
                    });
                </script>
                <%= f.submit "find", class: "btn btn-primary" %> 
              <% end %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown" style="color:blue; height:100%">Logged in as <strong><%= current_user.email %></strong>.
          <span class="caret"></span></button>
          <ul class="navbar-text pull-right dropdown-menu">
                <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li> 
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
                </ul>
              <% else %>
              <ul class="navbar-text pull-right" >
                <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
            <% end %>
          </ul>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
</nav>
<div class="code">
<!--toan bo !-->
<div class="container" style="width:100%;height:100%;padding-left: 10px;" id="toanbo" >
<!--khung ben phai !-->
    <div class="col-md-2" style="box-shadow: 0px 0px 2px 2px grey;width: 200px;border: 5px solid lightblue;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
    border-radius: 10px;">
      <% if current_user!=nil %>
      <!-- avatar -->
        <div class="picture" >

        <div style="">
          <%= link_to user_profile_path(current_user, current_user.profile)do %>
            <img src="<%= current_user.profile.picture %>" class="img-circle" style=" width:150px;height:200px;">
          <% end %>
        </div>

        <div style="padding-left: 25%;color: blue;width: 225px">
          name: <%=current_user.profile.name%><br>
          level: <%=current_user.profile.level%>
        </div>

        </div>
      <!-- end avatar -->

      <!-- group -->
      <div id='group_drop' style="margin-left: -14px;width: 120%; display: block;">
        <% @group = Group.where(user_id: current_user.id) %>
        <div style="display: inline-block; width:74%">
          <li class="mnav-ul-li" style="display: inline-block;width:100%">
            <%= button_tag "my group",:class => "btn btn-info btn-sm", :style => "width:100%"%>
            <ul class='mnav-ul-ul'>
              <% if @group!=nil&&@group.size>0 %>
                <% @group.each do |f| %>
                  <li>
                  <%=link_to "#{f.name}",user_group_path(current_user, f)%>
                  </li>
                <%end%>
              <%end%>
           </ul>
          </li>
          </div>
          <%= link_to '+', new_user_group_path(current_user),:class => "btn btn-info btn-sm",:style => "width:21%;" %>
      <script>
        $("#group_drop")
        .on('click', '.mnav-ul-li', function(){
        $(this).parent().find('ul:first > li').slideToggle();
        $(this).parent().find('ul:first > li').css({ 
            "display": "block",
            "width": "200px", 
           });
        });    
      </script>
      </div>
      <!-- end group -->

      <!-- attend-group -->
        <div id='atten_group_drop' style="margin-left: -14px;width: 120%; display: block">
