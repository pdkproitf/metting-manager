            <%= button_tag "atten group",:style => "width: 100%",:class => "btn btn-info btn-sm"%>
            <ul class='mnav-ul-ul'>
              <% if @at_group!=nil&&@at_group.size>0 %>
                <% @at_group.each do |f| %>
                  <li>
                  <%=link_to "#{f.name}",user_group_path(current_user, f)%>
